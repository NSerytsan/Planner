@page
@model Planner.Pages.AddEventModel
@{
}
<h4>Add Event</h4>
<div class="row mt-2">
    <div class="col-md-12">
        @Html.ValidationSummary(true)
        <form method="post">
            <div class="form-group row">
                <div class="col-sm-12 col-xl-12">
                    <label for="EventModel_Title">Title</label>
                    <textarea class="form-control" asp-for="@Model.EventModel.Title"></textarea>
                    <small id="titleHelp" class="form-text text-muted">Title should be unique among all events and
                        should not exceed more than 50 characters as well as special characters not allowed.</small>
                    @Html.ValidationMessageFor(q => q.EventModel.Title)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 col-xl-12">
                    <label for="EventModel_Description">Description</label>
                    <textarea class="form-control" asp-for="@Model.EventModel.Description"></textarea>
                    <small id="descriptionHelp" class="form-text text-muted">Description should be the detail
                        information for the event</small>
                    @Html.ValidationMessageFor(q => q.EventModel.Description)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 col-xl-6">
                    <label for="EventModel_Start">Start Date</label>
                    <input class="form-control" type="text" asp-for="@Model.EventModel.Start" />
                    <small id="startDateHelp" class="form-text text-muted">Event start date should be current date or
                        may be in future.</small>
                    @Html.ValidationMessageFor(q => q.EventModel.Start)
                </div>
                <div class="col-sm-6 col-xl-6">
                    <label for="EventModel_End">End Date</label>
                    <input type="text" class="form-control" asp-for="@Model.EventModel.End" />
                    <small id="endDateHelp" class="form-text text-muted">Event end date should be greater or equal to
                        the start date.</small>
                    @Html.ValidationMessageFor(q => q.EventModel.End)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 col-xl-6">
                    <label for="EventModel_Location">Location</label>
                    <input type="text" class="form-control" asp-for="@Model.EventModel.Location" />
                    <small id="locationHelp" class="form-text text-muted">Location where the event will held.</small>
                    @Html.ValidationMessageFor(q => q.EventModel.Location)
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-end">Save</button>
        </form>
    </div>
</div>